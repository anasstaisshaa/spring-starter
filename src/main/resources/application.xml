<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="driver" class="java.lang.String">
        <constructor-arg type="java.lang.String" value="PostgresDriver"/>
    </bean>

    <bean id="pool1" class="edu.AnastasiiaTkachuk.spring.database.pool.ConnectionPool"
          init-method="init"
          destroy-method="destroy">
        <constructor-arg name="username" ref="driver"/>
        <constructor-arg name="poolSize" value="10"/>
        <constructor-arg name="args">
            <list>
                <value>--arg1=value1</value>
                <value>--arg2=value2</value>
            </list>
        </constructor-arg>
        <constructor-arg name="properties">
            <null/>
        </constructor-arg>
        <property name="properties">
            <map>
                <entry key="url" value="posgresurl"/>
                <entry key="password" value="123"/>
                <entry key="password" value="123"/>
            </map>
        </property>
    </bean>

    <bean name="companyRepository" class="edu.AnastasiiaTkachuk.spring.database.repository.CompanyRepository"
          factory-method="of">
        <constructor-arg name="connectionPool" ref="pool1"/>
    </bean>
</beans>